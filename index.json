{ "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "legal project billing record",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "format": "date-time" },
    "from": {
      "$ref": "#/definitions/party" },
    "number": {
      "type": "string",
      "minLength": 1 },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project" } },
    "to": {
      "$ref": "#/definitions/party" } },
  "required": [ "date", "from", "number", "services", "to" ],
  "definitions": {
    "entry": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time" },
        "narrative": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1 } } },
      "required": [ "date", "narrative" ] },
    "project": {
      "type": "object",
      "properties": {
        "cents": {
          "type": "integer",
          "maximum": 99,
          "minimum": 0 },
        "dollars": {
          "type": "integer",
          "minimum": 0 },
        "note": {
          "type": "string",
          "minLength": 1 },
        "entries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/entry" } },
        "name": {
          "type": "string",
          "minLength": 1 } },
      "required": [ "dollars", "entries", "name" ] },
    "party": {
      "type": "object",
      "properties": {
        "address": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string" } },
        "name": {
          "type": "string",
          "minLength": 1 } },
      "required": [ "name" ] } } }
